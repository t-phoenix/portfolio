# Private Key (NEVER commit your real private key!)
PRIVATE_KEY=your_private_key_here

# Developer wallet address (receives 50% of all ticket sales)
DEV_ADDRESS=0xYourDevAddressHere

# Chainlink VRF Subscription ID (REQUIRED)
# Create at https://vrf.chain.link
VRF_SUBSCRIPTION_ID=12345

# Base RPC URLs (optional, defaults are configured in foundry.toml)
BASE_MAINNET_RPC=https://mainnet.base.org
BASE_SEPOLIA_RPC=https://sepolia.base.org

# Basescan API key for contract verification
BASESCAN_API_KEY=your_basescan_api_key_here

# Deployment configuration
MIN_BET=100000000000000  # 0.0001 ETH in wei
INITIAL_SEED=0           # Initial pot seed in wei (optional)

# VRF Configuration (optional - auto-detected for Base)
# VRF_COORDINATOR=0x...    # Only needed for custom networks
# VRF_KEY_HASH=0x...       # Only needed for custom networks
